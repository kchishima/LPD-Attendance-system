<div class="container">
  <h2>Add New Member</h2>
  <%= form_with model: @member, url: admins_members_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :member_id %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :member_id, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :first_name_kana %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :last_name_kana %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :first_name %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :last_name %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :postal_code %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :address %>
        </div>
        <div class="col-md-5">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :phone_number %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
    </div>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>