<div class="container">
  <h2>メンバー追加</h2>
  <%= form_with model: @member, url: admins_members_path, method: :post, local: true do |f| %>
  <%= render "layouts/error_messages", errors: @member.errors %>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :member_id ,"メンバーID" %>
        </div>
        <div class="col-md-10">
          <%= f.text_field :member_id, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :email , "メールアドレス"%>
        </div>
        <div class="col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :password ,"パスワード" %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :first_name_kana , "姓カナ"%>
        </div>
        <div class="col-md-4">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :last_name_kana , "名カナ"%>
        </div>
        <div class="col-md-4">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :first_name , "姓"%>
        </div>
        <div class="col-md-4">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :last_name , "名"%>
        </div>
        <div class="col-md-4">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :postal_code , "郵便番号"%>
        </div>
        <div class="col-md-3">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.label :address , "住所"%>
        </div>
        <div class="col-md-5">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          <%= f.label :phone_number , "電話番号"%>
        </div>
        <div class="col-md-10">
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>
      </div>
    </div>

    <%= f.submit '追加', class: 'btn btn-primary' %>
  <% end %>
</div>