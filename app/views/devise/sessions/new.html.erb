<div class="container">
  <%= alert %>
  <% if current_page?(new_member_session_path) %>
    <h2>メンバーログイン</h2>
  <% elsif current_page?(new_admin_session_path) %>
    <h2>管理者ログイン</h2>
  <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :id %><br/>
        <%= f.text_field :member_id, autofocus: true, autocomplete: "member_id" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <br>
      <div class="field">
        <%= f.submit "Log in" , class: 'btn btn-primary'%>
      </div>
     <% end %>

     <%= render "devise/shared/links" %>
</div>
