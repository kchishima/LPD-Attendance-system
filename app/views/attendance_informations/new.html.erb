<div class="container">
    <% if member_signed_in? %>
        <h2><%= "#{current_member.first_name} #{current_member.last_name}" %></h2>
    <% end %>
</div>
<h2 class="text-center">現在時刻</h2>
<h3 id="RealtimeClockArea" class="text-center"></h3>
<div class="container">
    <div class="row">
        <div class="col-md-6 mb-3 mb-md-0">
            <%= link_to '出勤', time_in_path, class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-md-6">
            <%= link_to '退勤', time_out_path, class: 'btn btn-danger btn-block' %>
        </div>
    </div>
    <hr>
    <div class="flex-box">
         <% @ais.each do |ai| %>
         <div class="flex-line">
           <div class="flex-box1">

                    <div class="flex-label">出勤</div>
                    <small><%= l ai.time_in.in_time_zone('Tokyo'), format: :original %></small>
           </div>
         <div class="flex-box1">
          <div class="flex-label">退勤</div>

            <% unless ai.time_out.nil? %>
                <small><%= l ai.time_out.in_time_zone('Tokyo'), format: :original %></small>
            <% else %>
                <small class="text-danger">打刻なし</small>
            <% end %>
        </div>
        </div>
      <% end %>
    </div>
</div>