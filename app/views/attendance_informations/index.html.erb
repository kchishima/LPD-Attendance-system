<div class="container">
  <%= link_to "<-#{@base_month.last_month.strftime('%Y年%m月')}", attendance_informations_path(selected_month: @base_month.last_month.strftime('%Y-%m')) %>
  <%= link_to "#{@base_month.strftime('%Y年%m月')}", attendance_informations_path(selected_month: @base_month.strftime('%Y-%m')) %>
    <%= link_to "#{@base_month.next_month.strftime('%Y年%m月')}->", attendance_informations_path(selected_month: @base_month.next_month.strftime('%Y-%m')) %>
     <% @ais.each do |ai| %>
    <div class="row">
        <div class="col-md-4">
          <small>
            <%= l ai.time_in.in_time_zone('Tokyo'), format: :original %>
          </small>
        </div>
        <div class="col-md-4">
          <% unless ai.time_out.nil? %>
            <small>
              <%= l ai.time_out.in_time_zone('Tokyo'), format: :original %>
            </small>
          <% else %>
            <span class="text-danger">未打刻</span>
          <% end %>
        </div>
        <div class="col-md-2">
          <%= link_to attendance_information_path(ai) do %>
            <%= ai.status_i18n %>
          <% end %>
        </div>
        <div class="col-md-2">
           <%= link_to "修正",edit_attendance_information_path(ai) %>
        </div>
    </div>
 <% end %>
</div>